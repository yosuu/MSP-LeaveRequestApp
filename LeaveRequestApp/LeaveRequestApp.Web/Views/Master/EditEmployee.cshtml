@model Employees
@section header {
    <link href="~/Content/plugins/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" type="text/css" />
}
@section scripts {
    <script src="~/Content/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.date-picker').datepicker({
                rtl: App.isRTL(),
                orientation: "left",
                autoclose: true
            });

        });
    </script>
}
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <!-- BEGIN PAGE CONTENT BODY -->
    <div class="page-content">
        <div class="container">
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="page-content-inner">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box purple-seance">
                            <div class="portlet-title">
                                <div class="caption">
                                    Edit Employee @(Model != null ? "- " + (Model.FirstName + " " + Model.LastName).Trim() : "")
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        @using (Html.BeginForm("EditEmployee", "Master", FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-body">
                                                <div class="form-group">
                                                    @Html.Label("Employee ID", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.EmployeeID, new { @class = "form-control", @readonly = "readonly" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("First Name", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Last Name", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Date of Birth", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "date-picker form-control", @data_date_format = "dd/mm/yyyy" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Place of Birth", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.PlaceOfBirth, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Phone Number", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Email", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.Label("Role", new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.DropDownList("Name", null, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-actions">
                                                <div class="row">
                                                    <div class="col-md-offset-3 col-md-9">
                                                        <button type="submit" class="btn green-meadow">Submit</button>
                                                        @Html.ActionLink("Cancel", "Employee", null, new { @class = "btn red-flamingo" })
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
        </div>
    </div>
    <!-- END PAGE CONTENT BODY -->
    <!-- END CONTENT BODY -->
</div>