@model RoleViewModel
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <!-- BEGIN PAGE CONTENT BODY -->
    <div class="page-content">
        <div class="container">
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="page-content-inner">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box yellow-soft">
                            <div class="portlet-title">
                                <div class="caption">
                                    Edit Role @(Model != null ? "- " + Model.Name : "")
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        @using (Html.BeginForm("EditRole", "Master", FormMethod.Post, new { @class = "form-horizontal" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            <div class="form-body">
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
                                                    <div class="col-md-9">
                                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-actions">
                                                <div class="row">
                                                    <div class="col-md-offset-3 col-md-9">
                                                        <button type="submit" class="btn green-meadow">Submit</button>
                                                        @Html.ActionLink("Cancel", "Roles", null, new { @class = "btn red-flamingo" })
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
        </div>
    </div>
    <!-- END PAGE CONTENT BODY -->
    <!-- END CONTENT BODY -->
</div>
