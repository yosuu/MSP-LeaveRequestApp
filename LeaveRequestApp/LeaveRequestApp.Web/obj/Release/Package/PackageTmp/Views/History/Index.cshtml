@model PagedModel<RequestViewModel>
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <!-- BEGIN PAGE CONTENT BODY -->
    <div class="page-content">
        <div class="container">
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="page-content-inner">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet box blue-steel">
                            <div class="portlet-title">
                                <div class="caption">
                                    History
                                </div>
                            </div>
                            <div class="portlet-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-hover">
                                                <thead>
                                                    <tr>
                                                        <th> Requestor </th>
                                                        <th> Begin Date </th>
                                                        <th> Leave Day </th>
                                                        <th> Reason </th>
                                                        <th> Status </th>
                                                        <th> Year </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.Data.Count > 0)
                                                    {
                                                        foreach (var item in Model.Data)
                                                        {
                                                            <tr>
                                                                <td> @item.Requestor </td>
                                                                <td> @item.BeginDate.ToShortDateString() </td>
                                                                <td> @item.LeaveDay </td>
                                                                <td> @item.Reason </td>
                                                                <td> @item.RequestStatus </td>
                                                                <td> @item.Year </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="6" style="text-align: center"> No data to display. </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                @if (Model.Data.Count > 0)
                                {
                                    <div class="row">
                                        <div class="col-md-5 col-sm-5">
                                            <div class="data-info">
                                                Showing @Model.MetaData.FirstItemOnPage to @Model.MetaData.LastItemOnPage from @Model.Total records
                                            </div>
                                        </div>
                                        <div class="col-md-7 col-sm-7">
                                            @Html.PagedListPager(Model.Data, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->
        </div>
    </div>
    <!-- END PAGE CONTENT BODY -->
    <!-- END CONTENT BODY -->
</div>